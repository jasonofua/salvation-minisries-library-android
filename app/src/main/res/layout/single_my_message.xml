<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="6dp"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/newColor">


            <ImageView
                android:id="@+id/imageThumbBought"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bas" />

            <jp.shts.android.library.TriangleLabelView
                android:id="@+id/boughtTriangularLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                app:backgroundColor="#d4ab23"
                app:corner="rightTop"
                app:labelBottomPadding="5dp"
                app:labelCenterPadding="7dp"
                app:labelTopPadding="10dp"
                app:primaryText="Video"
                app:primaryTextColor="#fff"
                app:primaryTextSize="16sp"
                app:secondaryTextSize="11sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txtBoughtMessageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageThumb"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="message name"
            android:textColor="#fff"
            android:textSize="17sp" />

    </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:id="@+id/showMenu"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_more"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:indeterminate="false"
        android:visibility="invisible"
        android:layout_height="wrap_content"/>

</LinearLayout>