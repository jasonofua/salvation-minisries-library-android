<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/colorPrimary"
    tools:context=".landingpage.Tab2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

   <Button
       android:layout_width="match_parent"
       android:layout_marginTop="5dp"
       android:id="@+id/btnOpenSearch"
       android:drawablePadding="10dp"
       android:drawableLeft="@drawable/search_dialog_ic_search"
       android:background="#fff"
       android:text="Search DIDL"
       android:layout_height="wrap_content"
       android:gravity="center_vertical"
       />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/trebucbd"
            android:text="TRENDING TOPICS"
            android:id="@+id/txtAllMessage"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="175dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:scaleType="centerCrop"
                        android:src="@drawable/word" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="85dp"
                        android:fontFamily="@font/trebucbd"
                        android:text="WORD"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:scaleType="centerCrop"
                        android:src="@drawable/power" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="85dp"
                        android:fontFamily="@font/trebucbd"
                        android:text="POWER"
                        android:textColor="#fff"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img8"
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:scaleType="centerCrop"
                        android:src="@drawable/faith" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="85dp"
                        android:fontFamily="@font/trebucbd"
                        android:text="FAITH"
                        android:textColor="#fff"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:scaleType="centerCrop"
                        android:src="@drawable/praise" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="85dp"
                        android:fontFamily="@font/trebucbd"
                        android:text="PRAISE"
                        android:textColor="#fff"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:scaleType="centerCrop"
                        android:src="@drawable/success" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="85dp"
                        android:fontFamily="@font/trebucbd"
                        android:text="SUCCESS"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:scaleType="centerCrop"
                        android:src="@drawable/family" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="85dp"
                        android:fontFamily="@font/trebucbd"
                        android:text="FAMILY/\nMARRIAGE"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                   >

                    <ImageView
                        android:id="@+id/img9"
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:scaleType="centerCrop"
                        android:src="@drawable/prosperity" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="85dp"
                        android:fontFamily="@font/trebucbd"
                        android:text="PROSPERITY/\nFINANCE"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img11"
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:scaleType="centerCrop"
                        android:src="@drawable/prayer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="85dp"
                        android:fontFamily="@font/trebucbd"
                        android:text="PRAYER"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img15"
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:scaleType="centerCrop"
                        android:src="@drawable/business" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="85dp"
                        android:fontFamily="@font/trebucbd"
                        android:text="BUSINESS/\nCAREER"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </RelativeLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/trebucbd"
            android:text="NEWS AND SPECIAL OFFERS"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvSpecialOffer"
            android:layout_width="match_parent"
            android:layout_height="220dp">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</ScrollView>