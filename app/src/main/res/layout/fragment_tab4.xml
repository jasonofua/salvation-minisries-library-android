<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".landingpage.Tab4">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/profileImage"
        android:src="@drawable/profile_pics"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Pastor Ibiyeome"
        android:id="@+id/userName"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:fontFamily="@font/trebucbd"
        android:textSize="20sp" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnEditProfie"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="20dp"
        android:paddingTop="10dp"
        fancy:fb_defaultColor="@color/colorAccentnew"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        fancy:fb_text="Update Profile"
        fancy:fb_textColor="#d4ab23"
        fancy:fb_textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fancy:fb_radius="30dp"/>

    <TextView
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INVITE FRIENDS"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:fontFamily="@font/trebucbd"
        android:textSize="18sp" />

    <TextView
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTACT US"
        android:id="@+id/txtHelp"
        android:textStyle="bold"
        android:fontFamily="@font/trebucbd"
        android:textSize="18sp" />
    <TextView
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD A DEBIT CARD"
        android:id="@+id/addDebitCard"
        android:textStyle="bold"
        android:fontFamily="@font/trebucbd"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_logout"
        android:fontFamily="@font/trebucbd"
        android:drawablePadding="8dp"
        android:text="LOGOUT"
        android:textColor="#ce1717"
        android:textSize="20sp"
        android:textStyle="bold" />



</LinearLayout>