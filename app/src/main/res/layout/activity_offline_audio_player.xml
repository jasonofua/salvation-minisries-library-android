<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".Activities.OfflineAudioPlayer">



    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:id="@+id/startAudioPlay"
        android:src="@drawable/ic_micro"/>
    
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:text="Tap to start audio "
        android:textAlignment="center"
        android:id="@+id/audioState"
        android:textSize="@dimen/dimen_20sp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textColor="#fff" />



    <ProgressBar
        android:id="@+id/progressBarAudio"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:indeterminate="false"
        android:visibility="visible"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_height="wrap_content"/>


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnPauseAudio"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="@dimen/dimen_25dp"
        fancy:fb_defaultColor="@color/colorAccentnew"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        fancy:fb_text="Stop Audio"
        fancy:fb_textColor="#FFFFFF"
        fancy:fb_textSize="20sp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fancy:fb_radius="30dp"/>




</LinearLayout>